<%= form_for(customer) do |f| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group row">
    <%= f.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :address, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :city, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :city, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :province_id, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
       <%= f.collection_select :province_id, @provinces, :id, :name, {include_blank: false}, {class: 'form-control'} %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :postal_code, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
       <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :phone, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :email, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, 'Confirm Password', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-5">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <%= f.submit 'Submit', class: "btn" %>

<% end %>
