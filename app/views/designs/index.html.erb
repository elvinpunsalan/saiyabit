<p id="notice"><%= notice %></p>

<h1>Designs</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Deviecs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designs.each do |design| %>
      <tr>
        <td><%= image_tag 'designs/' + design.image %></td>
        <td><%= design.name %></td>
        <td><%= design.description %></td>
        <td>
          <% if design.devices.present? %>
            <ul>
              <% design.devices.each do |device| %>
                <li><%= device.name %></li>
              <% end %>
            </ul>
          <% else %>
            None
          <% end %>
        </td>
        <td><%= link_to 'Show', design %></td>
        <td><%= link_to 'Edit', edit_design_path(design) %></td>
        <td><%= link_to 'Destroy', design, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

