<p id="notice"><%= notice %></p>

<h1>Designs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Deviecs</th>
    </tr>
  </thead>

  <tbody>
    <% @designs.each do |design| %>
      <tr>
        <td><%= design.name %></td>
        <td><%= design.description %></td>
        <td>
          <% if design.devices.present? %>
            <ul>
              <% design.devices.each do |device| %>
                <li><%= device.name %></li>
              <% end %>
            </ul>
          <% else %>
            None
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
