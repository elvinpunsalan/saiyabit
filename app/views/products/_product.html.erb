<div class="col-sm-4">
  <div class="card">
    <%= link_to image_tag(product.design.image.url(:thumb), class: "card-img-top img-fluid mx-auto d-block"), product %>
    <div class="card-block">
      <p class="card-text"><%= link_to "#{product.design.name} (#{product.device.name})", product %></p>
      <p class="card-text"><strong><%= number_to_currency(product.device.price) %></strong></p>
    </div>
  </div>
</div>