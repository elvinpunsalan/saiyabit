<div class="product">

  <p><%= image_tag product.design.image.url(:thumb) %></p>

  <p>
    <strong><%= product.design.name %></strong>
  </p>

  <p>
    <strong>Device:</strong>
    <%= product.device.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.design.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.device.price %>
  </p>
</div>