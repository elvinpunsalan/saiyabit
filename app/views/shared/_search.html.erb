<%= form_tag(products_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search..." %>
  <br>
  <%= select_tag :device_id, options_from_collection_for_select(Device.all, :id, :name, params[:device_id]), include_blank: true %>
  <%= submit_tag "Search" %>
<% end %>